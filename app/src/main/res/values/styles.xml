<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textColorHint</item>
    </style>

    <style name="form_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:alpha">0.4</item>
        <item name="android:background">#FFF</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">@dimen/input_font_size</item>
    </style>

    <style name="form_label">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/input_height</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/font1</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="form_label2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:clickable">true</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/font2</item>
        <item name="android:textSize">@dimen/input_font_size</item>
    </style>

</resources>